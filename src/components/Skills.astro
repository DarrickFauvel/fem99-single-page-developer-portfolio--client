---
import { skills } from "../data"
---

<section id="skills">
  <div class="container">
    <ul>
      <!-- <img class="ringsPattern" src={ringsImage} alt="" /> -->
      {
        skills.map(({ name, description }) => (
          <li>
            <>
              <h3>{name}</h3>
              <p>{description}</p>
            </>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  #skills {
    position: relative;
    background-image: url("/images/pattern-rings.svg");
    background-repeat: no-repeat;
    background-position: bottom left calc(375px - (375px / 2));
    padding-bottom: calc(129px / 2);
  }

  ul {
    display: flex;
    flex-direction: column;
    text-align: center;
    gap: 2em;
    list-style: none;
    padding: 0;
    padding-block: calc((40 / 16) * 1em);
    margin-top: calc((80 / 16) * 1em);
    border-block: 1px solid var(--color-white);
  }

  h3 {
    font-size: calc((32 / 16) * 1rem);
    line-height: calc(40 / 32);
  }

  p {
    font: var(--font-base-mobile);
  }

