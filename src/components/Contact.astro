<style>
  section {
    background-color: var(--color-eerie-black);
    padding-block: calc((60 / 40) * 1em);
  }

  h2,
  p {
    text-align: center;
  }

  h2 {
    font-size: calc((40 / 16) * 1rem);
    line-height: calc(40 / 40);
    letter-spacing: -1.14px;
  }

  p {
    margin-top: calc((20 / 16) * 1em);
  }

  form {
    display: grid;
    gap: calc((32 / 16) * 1em);
    margin-top: calc((50 / 16) * 1em);
  }

  input,
  textarea {
    background-color: transparent;
    color: var(--color-white);
    border: none;
    border-bottom: 1px solid var(--color-white);
    text-transform: uppercase;
    font-family: inherit;
    padding-inline: calc((24 / 16) * 1em);
    padding-bottom: calc((17 / 16) * 1em);
  }
  input::placeholder,
  textarea::placeholder {
    color: var(--color-platinum);
  }

  input:focus {
    border-bottom: 1px solid var(--color-aquamarine);
    outline: none;
  }

  input {
    height: calc((43 / 16) * 1em);
  }

  textarea {
    height: calc((107 / 16) * 1em);
  }

  button {
    background-color: transparent;
    border: none;
    padding-bottom: 8px;
    border-bottom: 2px solid var(--color-aquamarine);
    text-transform: uppercase;
    font-family: inherit;
    color: var(--color-white);
    display: flex;
    width: max-content;
    justify-self: self-end;
    letter-spacing: 2.29px;
    line-height: 26px;
  }
</style>
